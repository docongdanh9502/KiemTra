@model KiemTra.Models.SinhVien

@{
    ViewData["Title"] = "Chỉnh sửa sinh viên";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning">
            <h3 class="card-title mb-0">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaSV" />
                <input type="hidden" asp-for="Hinh" />

                <div class="row">
                    <div class="col-md-4 text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.Hinh))
                        {
                            <img src="~/images/@Model.Hinh" alt="@Model.HoTen"
                                 class="img-fluid rounded mb-3"
                                 style="max-width: 300px; max-height: 300px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="bg-light p-4 rounded mb-3">
                                <i class="fas fa-user fa-6x text-secondary"></i>
                            </div>
                        }
                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label">Thay đổi ảnh</label>
                            <input asp-for="ImageFile" class="form-control" accept="image/*" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="HoTen" class="form-label">Họ tên</label>
                            <input asp-for="HoTen" class="form-control" />
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GioiTinh" class="form-label">Giới tính</label>
                            <div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="GioiTinh" id="nam" value="true" />
                                    <label class="form-check-label" for="nam">Nam</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="GioiTinh" id="nu" value="false" />
                                    <label class="form-check-label" for="nu">Nữ</label>
                                </div>
                            </div>
                            <span asp-validation-for="GioiTinh" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NgaySinh" class="form-label">Ngày sinh</label>
                            <input asp-for="NgaySinh" class="form-control" type="date" />
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaNganh" class="form-label">Ngành học</label>
                            <select asp-for="MaNganh" class="form-select" asp-items="ViewBag.MaNganh">
                                <option value="">-- Chọn ngành học --</option>
                            </select>
                            <span asp-validation-for="MaNganh" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-save me-1"></i>Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

