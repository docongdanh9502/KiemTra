@model KiemTra.Models.SinhVien

@{
    ViewData["Title"] = "Chi tiết sinh viên";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h3 class="card-title mb-0">Thông tin chi tiết sinh viên</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center mb-4">
                    @if (!string.IsNullOrEmpty(Model.Hinh))
                    {
                        <img src="~/images/@Model.Hinh" alt="@Model.HoTen"
                             class="img-fluid rounded"
                             style="max-width: 300px; max-height: 300px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="bg-light p-4 rounded">
                            <i class="fas fa-user fa-6x text-secondary"></i>
                        </div>
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Mã sinh viên:</dt>
                        <dd class="col-sm-9">@Model.MaSV</dd>

                        <dt class="col-sm-3">Họ tên:</dt>
                        <dd class="col-sm-9">@Model.HoTen</dd>

                        <dt class="col-sm-3">Giới tính:</dt>
                        <dd class="col-sm-9">@(Model.GioiTinh ? "Nam" : "Nữ")</dd>

                        <dt class="col-sm-3">Ngày sinh:</dt>
                        <dd class="col-sm-9">@Model.NgaySinh.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-3">Ngành học:</dt>
                        <dd class="col-sm-9">@Model.NganhHoc?.TenNganh</dd>
                    </dl>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model.MaSV" class="btn btn-warning me-2">
                    <i class="fas fa-edit me-1"></i>Sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
