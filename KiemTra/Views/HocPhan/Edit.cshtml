@model KiemTra.Models.HocPhan

@{
    ViewData["Title"] = "Chỉnh sửa học phần";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MaHP" />
                    <div class="form-group mb-3">
                        <label asp-for="TenHP" class="control-label"></label>
                        <input asp-for="TenHP" class="form-control" />
                        <span asp-validation-for="TenHP" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="SoTinChi" class="control-label"></label>
                        <input asp-for="SoTinChi" class="form-control" />
                        <span asp-validation-for="SoTinChi" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="SoLuongDuKien" class="control-label"></label>
                        <input asp-for="SoLuongDuKien" class="form-control" />
                        <span asp-validation-for="SoLuongDuKien" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Lưu thay đổi
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

