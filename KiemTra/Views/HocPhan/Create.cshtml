@model KiemTra.Models.HocPhan

@{
    ViewData["Title"] = "Thêm học phần mới";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
            <p class="lead">Điền thông tin để thêm học phần mới vào hệ thống.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="MaHP" class="control-label">Mã học phần</label>
                    <input asp-for="MaHP" class="form-control" />
                    <span asp-validation-for="MaHP" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="TenHP" class="control-label">Tên học phần</label>
                    <input asp-for="TenHP" class="form-control" />
                    <span asp-validation-for="TenHP" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SoTinChi" class="control-label">Số tín chỉ</label>
                    <input asp-for="SoTinChi" class="form-control" type="number" />
                    <span asp-validation-for="SoTinChi" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SoLuongDuKien" class="control-label">Sĩ số tối đa</label>
                    <input asp-for="SoLuongDuKien" class="form-control" type="number" />
                    <span asp-validation-for="SoLuongDuKien" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

